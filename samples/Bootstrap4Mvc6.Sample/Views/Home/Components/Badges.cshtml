<h1>Badges <small class="text-muted">(and Labels)</small></h1>

@using (Bootstrap.BeginGridRow())
{
    using (Bootstrap.BeginGridCol(0, 7, 7, 7, 6))
    {
<pre>
@@Bootstrap.Badge(BadgeType.DefaultGray,   "DefaultGray")
@@Bootstrap.Badge(BadgeType.InfoCyan,      "InfoCyan")
@@Bootstrap.Badge(BadgeType.PrimaryBlue,   "PrimaryBlue")
@@Bootstrap.Badge(BadgeType.WarningOrange, "WarningOrange")
@@Bootstrap.Badge(BadgeType.DangerRed,     "DangerRed")
@@Bootstrap.Badge(BadgeType.SuccessGreen,  "SuccessGreen")
</pre>
    }
    using (Bootstrap.BeginGridCol(0, 5, 5, 5, 6))
    {
        @Bootstrap.Badge(BadgeType.DefaultGray, "DefaultGray")
        @Bootstrap.Badge(BadgeType.InfoCyan, "InfoCyan")
        @Bootstrap.Badge(BadgeType.PrimaryBlue, "PrimaryBlue")
        <br/>
        @Bootstrap.Badge(BadgeType.WarningOrange, "WarningOrange")
        @Bootstrap.Badge(BadgeType.DangerRed, "DangerRed")
        @Bootstrap.Badge(BadgeType.SuccessGreen, "SuccessGreen")
    }
}

