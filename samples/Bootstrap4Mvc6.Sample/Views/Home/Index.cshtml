@model string[][]
@{
    ViewBag.Title = "Bootstrap4Mvc6";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">Fluent, open-source, extendable packages for simplifying <strong>bootstrap 4</strong> markup in your <b>asp.net mvc6</b> projects</p>
</div>

@using (Bootstrap.BeginGridRow())
{
    using (Bootstrap.BeginGridCol(6, 3, 3, 3, 3))
    {
        <h2>Efficient</h2>
        <p>Using <code>TextWriter</code> internally - no <code>IHtmlString</code>, strings concatenating and re-building!</p>
    }
    using (Bootstrap.BeginGridCol(6, 3, 3, 3, 3))
    {
        <h2>Fluent</h2>
        <p>Easy to write code, easy to read. Not more html and c# code mix in your razor views!</p>
    }
    using (Bootstrap.BeginGridCol(6, 3, 3, 3, 3))
    {
        <h2>Extendable</h2>
        <p>New extensions methods, new 'building blocks' - write your own and use them in any combination.</p>
    }
    using (Bootstrap.BeginGridCol(6, 3, 3, 3, 3))
    {
        <h2>Other versions</h2>
        <p>See also <b>bootstrap 3</b> libraries <br /> for <a href="http://bootstrap3mvc5.azurewebsites.net">mvc5</a> and <a href="http://bootstrap3mvc6.azurewebsites.net">mvc6</a></p>
    }
}
@using (Bootstrap.BeginGridRow())
{
    using (Bootstrap.BeginGridCol(6, 6, 6, 6, 6))
    {
        <h2>Install via NuGet</h2>
        <pre>Install-Package <a href="https://www.nuget.org/packages/BootstrapMvc.Bootstrap4Mvc6">BootstrapMvc.Bootstrap4Mvc6</a></pre>

        <h2>Opensource</h2>
        <p>@Bootstrap.Button(ButtonType.SecondaryWhite, "View on GitHub").Href("https://github.com/justdmitry/BootstrapMvc")</p>
    }
    using (Bootstrap.BeginGridCol(6, 6, 6, 6, 6))
    {
        <h2>Live demo</h2>
        using (Bootstrap.P("This site runs with:").BeginContent())
        {
            using (var list = Bootstrap.BeginList(ListType.Unstyled))
            {
                foreach (var pair in Model)
                {
                    @list.Item().Content(Bootstrap.Span(pair[0]), Bootstrap.Span(pair[1]).PullRight())
                }
            }
        }
    }
}
