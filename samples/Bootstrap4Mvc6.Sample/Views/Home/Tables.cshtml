{
    using (tbl.BeginBody())
    {
        using (tbl.BeginRow())
        {
            @@tbl.Cell("Body Cell 1").Color(TableRowCellColor.InfoCyan).RowSpan(2)
            @@tbl.Cell("Body Cell 1")
            @@tbl.Cell("Body Cell 1").Color(TableRowCellColor.Active)
        }

        using (tbl.BeginRow())
        {
            @@tbl.Cell("Body Cell 2").ColSpan(2)
        }
    }
}
</pre>
