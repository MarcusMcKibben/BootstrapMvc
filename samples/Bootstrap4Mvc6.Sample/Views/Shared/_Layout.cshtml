<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/site.min.css" type="text/css" />
</head>
<body>
    <div class="navbar navbar-dark bg-inverse navbar-fixed-top">
        <div class="container">
            @Html.ActionLink("Bootstrap4Mvc6", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @using (var list = Bootstrap.List().CssClass("nav navbar-nav").BeginContent())
            {
                @list.Item(Bootstrap.Anchor("Installation").Href(Url.Action("Installation")).CssClass("nav-link")).CssClass("nav-item")
                @list.Item(Bootstrap.Anchor("Basics").Href(Url.Action("Basics")).CssClass("nav-link")).CssClass("nav-item")
                using (list.Item().CssClass("nav-item").BeginContent())
                {
                    <div class="dropdown">
                        @using (var dd = Bootstrap.Anchor("Components").CssClass("nav-link").BeginDropdown())
                        {
                            @dd.Link("Utilities").Href("/components/utilities").CssClass("nav-link")
                        }
                    </div>
                }
                @list.Item(Bootstrap.Anchor("Forms").Href(Url.Action("Forms")).CssClass("nav-link")).CssClass("nav-item")
                @list.Item(Bootstrap.Anchor("Extend it!").Href(Url.Action("Extend")).CssClass("nav-link")).CssClass("nav-item")
            }
        </div>
    </div>

    @using (Bootstrap.Container().CssClass("body-content").BeginContent())
    {
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; Dmitry Popov @DateTime.Now.Year; <a href="https://github.com/justdmitry/BootstrapMvc">BootstrapMvc on GitHub</a></p>
        </footer>
    }

    <script src="//code.jquery.com/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>


</html>
