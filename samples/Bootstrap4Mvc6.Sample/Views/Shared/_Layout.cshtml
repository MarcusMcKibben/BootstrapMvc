<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <style>
        body {
            padding-top: 5rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-info fixed-top">
        <div class="container">
            @Html.ActionLink("Bootstrap4Mvc6", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Installation", "Installation", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Basics", "Basics", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Components</a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Alerts", "Components", "Home", new { component = "Alerts" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Badges", "Components", "Home", new { component = "Badges" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("Buttons", "Components", "Home", new { component = "Buttons" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("ListGroups", "Components", "Home", new { component = "ListGroups" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item">@Html.ActionLink("Forms", "Forms", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Extend it!", "Extend", "Home", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; Dmitry Popov 2016; <a href="https://github.com/justdmitry/BootstrapMvc">BootstrapMvc on GitHub</a></p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
